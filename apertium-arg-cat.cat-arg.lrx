<rules>
  <!-- 
    Chooses "ciento" as the translation for "cent" when it is of followed by a <num>. 
  -->

<rule weight="1.0">
    <match lemma="cent">
		<select lemma="ciento"/>
	</match>	
    <match tags="num.*"/>
</rule>
  
